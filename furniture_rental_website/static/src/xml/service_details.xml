<?xml version="1.0" encoding="UTF-8"?>
<templates id="servicedetails" xml:space="preserve">
    <t t-name="service_based_planning.service_details">
        <div id="wrap">
            <div class="container oe_website_sale py-2">
                <div class="row">
                    <div class="col-12 col-xl order-xl-1 oe_cart">
                        <section class="s_website_form" data-vcss="001" data-snippet="s_website_form">
                            <div class="container">
                                <div class="s_website_form_rows row s_col_no_bgcolor">
                                    <div class="form-group mb-3 d-flex align-items-center">
                                        <label for="car_model" class="form-label" style="flex: 0 0 250px;">
                                            Car Model:
                                        </label>
                                        <input type="text" id="car_model" class="form-control"
                                                name="car_model"/>
                                    </div>
                                    <div class="form-group mb-3 d-flex align-items-center">
                                        <label for="manufacture_year" class="form-label"
                                                style="flex: 0 0 250px;">Manufacture Year:
                                        </label>
                                        <input type="text" id="manufacture_year" class="form-control"
                                                name="manufacture_year"/>
                                    </div>
                                    <div class="form-group mb-3 d-flex align-items-center">
                                        <label for="license_plate" class="form-label"
                                                style="flex: 0 0 250px;">License Plate:
                                        </label>
                                        <input type="text" id="license_plate" class="form-control"
                                                name="license_plate"/>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <label class="form-label" style="flex: 0 0 250px;">Wheel Lock:
                                        </label>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group d-flex align-items-center">
                                                    <input type="radio" id="wheel_lock_yes"
                                                            name="wheel_lock" class="me-2" value="yes"/>
                                                    <label for="wheel_lock_yes">Yes</label>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group d-flex align-items-center">
                                                    <input type="radio" class="me-2" id="wheel_lock_no"
                                                            name="wheel_lock"
                                                            value="no"/>
                                                    <label for="wheel_lock_no">No</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mb-3 d-flex align-items-center">
                                        <label for="odometer" class="form-label" style="flex: 0 0 250px;">
                                            Odometer:
                                        </label>
                                        <input type="text" class="form-control" id="odometer"
                                                name="odometer"/>
                                    </div>
                                    <div class="form-group mb-3 d-flex align-items-center">
                                        <label for="parts" class="form-label" style="flex: 0 0 250px;">
                                            Parts:
                                        </label>
                                        <input type="text" class="form-control" id="parts" name="parts"/>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
