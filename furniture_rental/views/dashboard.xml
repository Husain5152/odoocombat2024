<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="rental_user_dashboard_kanban_view" model="ir.ui.view">
        <field name="name">Rental Dashboard</field>
        <field name="model">res.users</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban create="false">
                <field name="total_orders"/>
                <field name="total_pickup_orders"/>
                <field name="total_return_orders"/>
                <templates>
                    <t t-name="kanban-box">
                        <style>
                            .o_kanban_record{
                            width: 100% !important;
                            }
                        </style>
                        <div class="container-fuild">
                            <div id="rental_dashboard" class="row p-2">
                                <div class="card col-md-4 m-2" style="width: 30% !important;">
                                    <div class="px-3 py-4 m-auto">
                                        <h2 class="text-info text-center">Total Orders</h2>
                                        <h2 class="text-center">
                                            <field name="total_orders"/>
                                        </h2>
                                        <div class="m-auto text-center">
                                            <a type="object" name="open_total_orders"
                                               class="btn btn-primary text-center">
                                                View Details
                                                <div class="ml-auto">
                                                    <i class="mdi mdi-arrow-right bg-blue-right"></i>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="card col-md-4 m-2" style="width: 30% !important;">
                                    <div class="px-3 py-4 m-auto">
                                        <h2 class="text-info text-center">Total Picked Orders</h2>
                                        <h2 class="text-center">
                                            <field name="total_pickup_orders"/>
                                        </h2>
                                        <div class="m-auto text-center">
                                            <a type="object" name="open_total_picked_orders"
                                               class="btn btn-primary text-center">
                                                View Details
                                                <div class="ml-auto">
                                                    <i class="mdi mdi-arrow-right bg-blue-right"></i>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="card col-md-4 m-2" style="width: 30% !important;">
                                    <div class="px-3 py-4 m-auto">
                                        <h2 class="text-info text-center">Total Return Orders</h2>
                                        <h2 class="text-center">
                                            <field name="total_return_orders"/>
                                        </h2>
                                        <div class="m-auto text-center">
                                            <a type="object" name="open_total_return_orders"
                                               class="btn btn-primary text-center">
                                                View Details
                                                <div class="ml-auto">
                                                    <i class="mdi mdi-arrow-right bg-blue-right"></i>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_rental_dashboard" model="ir.actions.act_window">
        <field name="name">Rental Dashboard</field>
        <field name="res_model">res.users</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="rental_user_dashboard_kanban_view"/>
        <field name="usage">menu</field>
        <field name="domain">[('id','=',uid)]</field>
    </record>

    <menuitem id="rental_dashboard_menu" name="Dashboard" parent="rental_base_menu" action="action_rental_dashboard" sequence="0" />
</odoo>